generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events {
  id          String @id
  coefficient Float
  deadline    Int
  status      String
  bets    Bets[]
}

model Bets {
  betId    String 
  eventId    String 
  amount    Float
  potentialWin    Float
  status    String
  event    Events @relation(fields: [eventId] , references: [id])
  @@id([betId , eventId])
}